{
 AROOPSTATUS := "BULLISH"
 

}
IF ( B )
{
 AROOPSTATUS := "BEARISH"
 
} 
EXPOSE{AROOPSTATUS}
ALERTTEXT{"AROOPSTATUS " +  AROOPSTATUS}

D  := STOKPERD[14;3;0]
K  := STOKPERK[14;3;0]
SHORTERMSTOCKASTICS := "NONE"
IF ( K > D   AND K > 20  )
{
SHORTERMSTOCKASTICS := "BUY"
}
IF ( K < D AND   K < 80  )
{
    SHORTERMSTOCKASTICS := "SELL"
}
EXPOSE{SHORTERMSTOCKASTICS}
ALERTTEXT{"SHORTERMSTOCKASTICS " +  SHORTERMSTOCKASTICS}

WILLIAMSTATUS := "NONE"
